@model EventPlanning.Models.EntitiesModel.Event


<div class="container">
    <div class="row">

        <div class="col-md-offset-2 col-md-8">
            <div class="event-two">
                <div class="name-event">
                    @Model.NameEvent
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <ul class="nav nav-pills my-ul">
                            <li>Тема:</li>
                            <li class="my-pull">
                                @Model.Topic
                            </li>
                        </ul>

                        <ul class="nav nav-pills my-ul">
                            <li>Адресс:</li>
                            <li class="my-pull">
                                @Model.Locations
                            </li>
                        </ul>

                        <ul class="nav nav-pills my-ul">
                            <li>Начало:</li>
                            <li class="my-pull">
                                @{
                                    DateTime dt = (DateTime)Model.DateEvent;
                                    string date = String.Format($"{dt.ToString("dd-MM-yyyy")} в {dt.ToString("HH:mm")}");
                                }
                                @Html.Label(date)
                            </li>
                        </ul>

                        <ul class="nav nav-pills my-ul">
                            <li>Количество участников:</li>
                            <li class="my-pull">
                                @Model.NamderOfParticipants
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <div class="seats">
                            <ul class="nav nav-stacked">
                                <li class="text-center">Осталось мест</li>
                                <li class="text-center">@Model.NamderOfParticipants</li>
                            </ul>
                        </div>
                        <div class="my-btn">
                            <button class="btn save-t" type="button" onclick="location.href='@Url.Action("Reg", "Home")'">Зарегистрироваться</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

